
@{
    ViewBag.Title = "Login";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<body>
    <div class="container body-content">

        <div class="wrapper fadeInDown">
            <div id="formContent">
                <!-- Login Form -->
                <form method="post" action="~/admin/login/Index">
                    <div class="form-horizontal">
                        <h2 style="text-align:center; font-weight:bold; padding-top: 20px">Đăng Nhập</h2>
                        <hr />
                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <label class="control-label col-md-2">Tài khoản</label>
                            <div class="col-md-4">
                                <input type="text" id="username" class="fadeIn second form-control" name="username" placeholder="username">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2">Mật khẩu</label>
                            <div class="col-md-4">
                                <input type="password" id="password" class="fadeIn third form-control" name="password" placeholder="password">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Đăng nhập" class="btn btn-info" />
                            </div>
                        </div>
                    </div>
                </form>

            </div>
        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>