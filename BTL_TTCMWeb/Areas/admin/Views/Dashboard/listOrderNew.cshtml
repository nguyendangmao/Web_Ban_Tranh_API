@model IQueryable<BTL_TTCMWeb.Models.tbl_Order>
@if (Model != null)
{
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <i class="fa fa-bell-o"></i>
        <span class="label label-warning">@Model.Count()</span>
    </a>
    <ul class="dropdown-menu">
        <li class="header">Bạn có @Model.Count() đơn hàng mới</li>
        <li>
            <ul class="menu">
                @foreach (var item in Model)
                {
                    <li>
                        <!-- start notification -->
                        <a href="@Url.Action("Details", "Order", new {id = item.order_id })">
                            <i class="fa fa-users text-aqua"></i> @item.tbl_orderDetail.Sum(x=>x.quantity) Sản phẩm: @item.order_total_price VNĐ
                        </a>
                    </li>
                }
            </ul>
        </li>
        <li class="footer"><a href="@Url.Action("Order", "Order_Product_producer")">Xem tất cả</a></li>
    </ul>
}
else
{
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <i class="fa fa-bell-o"></i>
        <span class="label label-warning">0</span>
    </a>
}